#include <fcntl.h>
#include <unistd.h>

int main(int argc, char* argv[]) {
    if (argc != 3) return 1;

    int src = open(argv[1], O_RDONLY);
    int dst = open(argv[2], O_WRONLY | O_CREAT | O_TRUNC, 0644);
    if (src < 0 || dst < 0) return 1;

    char buf[4096];
    ssize_t r;
    while ((r = read(src, buf, sizeof(buf))) > 0) {
        for (ssize_t i = 0; i < r;) {
            if (buf[i] == 0) {
                ssize_t z = i;
                while (z < r && buf[z] == 0) ++z;
                lseek(dst, z - i, SEEK_CUR);
                i = z;
            } else {
                ssize_t d = i;
                while (d < r && buf[d] != 0) ++d;
                write(dst, buf + i, d - i);
                i = d;
            }
        }
    }

    close(src);
    close(dst);
    return 0;
}
